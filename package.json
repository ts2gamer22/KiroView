{
  "name": "kiro-activity-status",
  "displayName": "Kiro Activity Status",
  "description": "Show your Kiro IDE activity status with external integrations.",
  "version": "1.0.3",
  "publisher": "TheVibinNetwork",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ts2gamer22/KiroView"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "status",
    "activity",
    "integration",
    "productivity"
  ],
  "homepage": "https://github.com/ts2gamer22/KiroView",
  "bugs": {
    "url": "https://github.com/ts2gamer22/KiroView/issues"
  },
  "main": "./dist/extension.js",
  "icon": "media/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "commands": [
      {
        "command": "kiroPresence.toggle",
        "title": "Kiro Presence: Toggle"
      },
      {
        "command": "kiroPresence.reconnect",
        "title": "Kiro Presence: Reconnect"
      },
      {
        "command": "kiroPresence.openSettings",
        "title": "Kiro Presence: Open Settings"
      },
      {
        "command": "kiroPresence.diagnostics",
        "title": "Kiro Presence: Diagnostics"
      }
    ],
    "configuration": {
      "title": "Discord Rich Presence",
      "properties": {
        "kiroPresence.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Discord Rich Presence integration."
        },
        "kiroPresence.discordClientId": {
          "type": "string",
          "default": "1403518715407892590",
          "description": "Discord Application Client ID used for Rich Presence. Uses default Kiro app if not set. Only change if you want to use your own Discord app with custom assets."
        },
        "kiroPresence.showFileName": {
          "type": "boolean",
          "default": false,
          "description": "Show the active file name in presence (redacts by default)."
        },
        "kiroPresence.showWorkspaceName": {
          "type": "boolean",
          "default": false,
          "description": "Show the workspace or repository name in presence."
        },
        "kiroPresence.idleTimeoutMs": {
          "type": "number",
          "default": 90000,
          "minimum": 10000,
          "description": "After this idle time, switch to an idle presence."
        },
        "kiroPresence.buttons.enableRepositoryButton": {
          "type": "boolean",
          "default": false,
          "description": "Show a 'View Project' button when a VCS remote URL is detected."
        },
        "kiroPresence.redactPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.env",
            "**/*secret*",
            "**/.env.*"
          ],
          "description": "Glob patterns of files to always redact from presence."
        },
        "kiroPresence.largeImage": {
          "type": "string",
          "enum": [
            "auto",
            "kiro",
            "vscode"
          ],
          "default": "auto",
          "description": "Pick which large image key to use for presence assets."
        },
        "kiroPresence.showProblems": {
          "type": "boolean",
          "default": false,
          "description": "Append problems (errors/warnings) count to presence state."
        },
        "kiroPresence.showGitBranch": {
          "type": "boolean",
          "default": false,
          "description": "Append current Git branch to presence state (uses built-in Git extension when available)."
        },
        "kiroPresence.showCursorPosition": {
          "type": "boolean",
          "default": false,
          "description": "Append current cursor position (line/column) to presence state."
        },
        "kiroPresence.showLanguageIcons": {
          "type": "boolean",
          "default": true,
          "description": "Show language-specific small icons in Discord presence (requires Discord app assets)."
        },
        "kiroPresence.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging in the extension host."
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node esbuild.js --production",
    "publish:ovsx": "npx ovsx publish",
    "lint": "echo 'no linter configured'"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "minimatch": "^9.0.4"
  }
}
